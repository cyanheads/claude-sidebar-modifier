{
  "manifest_version": 2,
  "name": "Claude Sidebar Adjuster",
  "version": "1.2",
  "description": "Adjust the Claude.ai sidebar width and behavior",
  "permissions": [
    "activeTab",
    "storage",
    "https://*.claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.claude.ai/*"],
      "js": ["sidebar-disable.js"],
      "css": ["sidebar-disable.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}
