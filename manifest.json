{
  "manifest_version": 2,
  "name": "Claude Sidebar Adjuster",
  "version": "1.3",
  "description": "Adjust the Claude.ai sidebar width and behavior",
  "permissions": [
    "activeTab",
    "storage",
    "https://*.claude.ai/*",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.claude.ai/*"],
      "js": ["sidebar-disable.js"],
      "css": ["sidebar-disable.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "web_accessible_resources": [
    "sidebar-disable.js",
    "sidebar-disable.css"
  ]
}
